<%- include("partials/header.ejs") %>

  <div>
    <br>
    <form id="compose" action="/compose" method="POST">
      <div class="container">
        <div class="form-group">
          <label for="postTile">Title</label>
          <input type="text" class="form-control" name="postTitle" placeholder="Enter Title" autofocus required>
        </div>
        <div class="form-group">
          <label for="postDesc">Description</label>
          <input type="text" class="form-control" name="postDesc" placeholder="Enter Description" autofocus required>
        </div>
    
        <div class="form-group">
          <label for="postContent">Post</label>
          <textarea class="form-control content-box" name="postContent" rows="3" placeholder="Enter Content" autofocus required></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-default btn-outline-success">Publish</button>
      </div>
    </form>
      
  </div>

